        <a href="#" class="anav  onpage"><b>My Notes</b></a>
        <a href="/myaudiobooks?id=<%=result[0].id %>" class="anav"><b>My Audiobooks</b></a>
        <a href="/tutodeskapps?id=<%=result[0].id %>" class="anav"><b>Tutodesk Apps</b></a>
      </div>
      <div class="rightnav">

        <div class="search">
          
          <form action="/mynotes/search?id=<%=result[0].id %>" method="post" enctype="multipart/form-data">
            <center>
            <input class="search2" type="search" placeholder="Search Notes" aria-label="Search" name="search">
            <button  type="submit" class="btn btn-warning hb">üîç</button>
          </center>
          </form>
        
        </div>

        <div class="labellist">
          <select class="custom-select my-1 mr-sm-2" id="menu1">
            <option value="/mynotes?id=<%=result[0].id %>">Select Label</option>
            <option value="/mynotes/y?id=<%=result[0].id %>" style="background-color:#fbc531">Yellow</option>
            <option value="/mynotes/r?id=<%=result[0].id %>" style="background-color:#e84118">Red</option>
            <option value="/mynotes/b?id=<%=result[0].id %>" style="background-color:#00a8ff">Blue</option>
            <option value="/mynotes/g?id=<%=result[0].id %>" style="background-color:#4cd137">Green</option>
            <option value="/mynotes?id=<%=result[0].id %>">All</option>

          </select>
        </div>

        <div class="buttonnav">
          <center>
          <button type="button" class="btn btn-warning hb" data-toggle="modal" data-target="#addnotes" title="Add Notes"><b>+</b></button>
        </center>
        </div>

      </div>

    </nav>
    <form action="/mynotes/add?id=<%=result[0].id %>" method="post" enctype="multipart/form-data">
    <div class="modal fade" id="addnotes" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Add Notes</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">

            
              <div class="form-group">
                <label for="labelc">label</label>
                <select id="labelc" class="form-control" name="label">
	                <option selected value="1" style="background-color:#fbc531">Yellow</option>
                  <option value="2" style="background-color:#e84118">Red</option>
                  <option value="3" style="background-color:#00a8ff">Blue</option>
                  <option value="4" style="background-color:#4cd137">Green</option>
                </select>
              </div>
            
              <div class="form-group">
            
                <input type="text" name="titlen" class="form-control" placeholder="Title:">
            </div>
              <div class="form-group">
                <textarea class="form-control" rows="3" name="Notes" placeholder="Add text here"></textarea>
            </div>



          </div>
          <div class="modal-footer">
            <input type="submit" class="btn btn-warning hb">
          </div>
        </div>
      </div>
    </div>
  </form>

  <div class="noteslist">
    
    <% notes.map(function(item,index){ %>
      <div class="card" style="background-color: <%=item.fg%>;"   >
        <div class="cardh" style="background-color: <%=item.bg%>;">
          <h4><%=item.title %></h4>


        </div>
        <div class="cardbody" style="background-color:<%=item.fg%>;">
          <p><%=item.notes %></p>
        </div>
        <hr>
        <button type="button" style="width: 20%; margin: 5px;" class="btn btn-dark hb" data-toggle="modal" data-target="#notesedit<%=item.id %>" title="Add Notes"><b>‚úèÔ∏è</b></button>

      </div>

      <form action="/mynotes/edit?id=<%=result[0].id %>" method="post" enctype="multipart/form-data">
        <div class="modal fade" id="notesedit<%=item.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Edit Notes</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
    
                <input type="text" readonly="true" name="noteid" value="<%=item.id %>" class="form-control"></textarea><br>
                <input type="text" readonly="true" name="noteun" value="<%=result[0].username %>" class="form-control"></textarea>

                <br>
                
                  <div class="form-group">
                    <label>Title:</label>
                    <input type="text" name="titlen" class="form-control" value="<%=item.title %>" placeholder="Title:" >
                </div>
                  <div class="form-group">
                    <label>Content:</label>
                    <textarea class="form-control" rows="3" name="Notes" placeholder="Add text here" ><%=item.notes %></textarea>
                </div>
    
    
    
              </div>
              <div class="modal-footer">
                <input type="submit" name="btn" value="Edit" class="btn btn-warning hb">
                <input type="submit" name="btn" value="Delete" class="btn btn-warning hb">
    
              </div>
            </div>
          </div>
        </div>
      </form>

    <% }) %>

  </div>

  

