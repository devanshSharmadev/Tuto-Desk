    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="icon" type="image/x-icon" href="/images/logo.png">
    <title><%= title %></title>
</head>
<body>
    <div class="header2">
        <center>
        <div class="headimg">
        <img src="/images/logo.png" width="40px" height="40px">
        </div>
        <div class="hedingline">
        <h3>TUTODESK - Edit Profile</h3>
        </div>
        </center>
        
    </div>
    <br><br>
    <div class="signupbox">
        
        <div class="left">
                <center>
                <img class="imgstyle" src="/images/logo.png" width="100px" height="100px"><br><br>
                <h3 class="lefthead">Tutodesk</h3>
                <hr>
                <img src="/images/<%= result[0].image %>" class="rounded mx-auto d-block imgs" width="300" height="300">
                          <br>
                          <h4 align="center"><%=result[0].name %></h4>

                          <div class="label">                <p><b>Unbeatable ebook in pdf formate, create your own notes from the books, and Listen the book you want.</b></p>
                          </div>
            </center>

        </div>
        <div class="right">
            <div class="hr">
                <h3><b>Fille the formalities HERE üëáüèª</b></h3>
                
            </div>
            
            <div class="form">
                <a href="/"><b>Home</b></a>
                <form action="/editprofilesetup" method="post" enctype="multipart/form-data"> 
                    <div class="form-group">
                        <label>User ID</label>
                        <input type="text" readonly="true" name="userid" value="<%=result[0].id %>" class="form-control"></textarea>
                        
                      </div>
                    <div class="form-group">
                        <label>Your Good Name:</label>
                        <input type="text" name="aname" class="form-control" placeholder="Enter Name" required value="<%=result[0].name %>">
                    </div>
                    <div class="form-group">
                        <label>User Name (should contain only lowercase characters,numbers, or _ ):</label>
                        <input type="text" name="auname" class="form-control" placeholder="Enter a unique username" pattern="[a-z 0-9 _]{1,25}" required value="<%=result[0].username %>">
                        <label style="color:#d13737"><b><%=msg1%></b></label>
                

                        <div class="form-row">
                            <div class="col">
                                <label>Current Password</label>
                              <input type="password" name="apass" class="form-control" placeholder="Enter your current Password">
                            </div>
                            <div class="col">
                                <label>New Password</label>
                              <input type="password" name="avpass" class="form-control" placeholder="Enter New Password" >
                            </div>
                            
                          </div>
                          

                        <div class="form-group">
                            <label>E-mail ID:</label><label></label>
                            <input type="email" name="email" class="form-control" placeholder="Enter your G-mail ID" required value="<%=result[0].emailid %>">
                            
                            </div>
                            <label style="color:#4cd137"><b><%=msg%></b></label>
                            <div class="form-group divbutton">
                                <input type="submit" name="btn" class="btn btn-primary buttonstyle" value="Edit">
                                <input type="submit" name="btn" class="btn btn-primary buttonstyle" value="Delete">
                                </div>
                            
                               
                </form>
                <h5>Edit Picture:</h5>
                <form action='/editpicture' method="POST" enctype="multipart/form-data">
                    <div class="form-row">
                        <div class="col">
                            <label><b>Picture:</b></label><br>
                            
                          <img src='/images/<%= result[0].image %>' class="rounded mx-auto d-block imgs" width='150' height='150'>
                          
                      </div>
                        <div class="col">
                          <label><b>Select New Picture:</b></label>
                          <div class="form-group">
                            <label>User ID</label>
                            <input type="text" readonly="true" name="userid" value="<%=result[0].id %>" class="form-control"></textarea>
                          </div>
                          <input type="file" name='edpicture' required class="form-control"  placeholder="Enter Product Model"><br>
                          <input type="submit"  value="Edit Picture" name="btn"     class="btn btn-primary buttonstyle" class="form-control" >
                         </div> 
                     </div> 
                     <div class="form-group">
                     
                </form>
            </div>
        </div>
    
    </div>

    
